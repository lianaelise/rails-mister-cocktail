<div class="wrapper">
  <div class="container">
    <div class="vertical-pic">
      <div class="flex-item vertical-form">
        <h1>Edit Cocktail <%= @cocktail.name %> </h1>

        <%= simple_form_for(@cocktail) do |f| %>
          <div class="form-group">
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden, class: 'form-control btn btn-primary' %>
          </div>

          <div class="form-group">
            <%= f.input :name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.input :description, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.input :contributor, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.input :servings, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.input :instructions, class: 'form-control' %>
          </div>

          <ul class="list-inline">
            <li class="list-inline-item">
              <%= f.submit class: 'btn btn-primary' %>
            </li>
            <li class="list-inline-item">
              <%= link_to "Back to All Cocktails", cocktails_path, class: "btn btn-primary"%>
            </li>
          </ul>
        <% end %>
      </div>
        <%= cl_image_tag "https://res.cloudinary.com/diu66bbfw/image/upload/v1550152748/grapefruitfrom2.jpg", class:"vertical" %>
      </div>
    </div>
  </div>
</div>
